# Claude Self-Reflect Environment Variables
# Copy this file to .env and update with your values


# Qdrant Configuration
QDRANT_URL=http://localhost:6333

# Embedding Configuration
# Always uses local FastEmbed embeddings (no API keys needed)
# Switched to E5-small (multilingual), vectors = 384 dims
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
VECTOR_SIZE=384

# Memory Decay Configuration (optional)
ENABLE_MEMORY_DECAY=true
DECAY_WEIGHT=0.3
DECAY_SCALE_DAYS=90

# Local model caching (optional)
TRANSFORMERS_CACHE=~/.cache/huggingface
MODEL_CACHE_DAYS=7

# Docker Memory Limits (optional)
# Increase if processing large conversation files
WATCHER_MEM_LIMIT=2g
QDRANT_MEM_LIMIT=1g
