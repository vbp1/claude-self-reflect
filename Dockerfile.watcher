FROM python:3.13-slim

# Install build dependencies for psutil
RUN apt-get update && apt-get install -y \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    psutil==5.9.5 \
    qdrant-client>=1.7.0 \
    backoff>=2.2.0 \
    requests>=2.31.0 \
    tqdm>=4.66.0 \
    fastembed>=0.4.0

# Create non-root user
RUN useradd -m -u 1000 watcher

# Create scripts directory and copy required files
RUN mkdir -p /scripts

# Copy import scripts
COPY scripts/import-conversations-unified.py /scripts/
COPY scripts/import-watcher-smart.py /scripts/

RUN chmod +x /scripts/*.py

# Set working directory
WORKDIR /app

# Switch to non-root user
USER watcher

# Default command - use smart incremental watcher
CMD ["python", "/scripts/import-watcher-smart.py"]